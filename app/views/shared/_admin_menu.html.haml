- inactive_css = 'list-group-item'
- active_css = inactive_css + ' active'

.list-group
  = link_to 'Dashboard', dashboard_path, class: (controller_name == 'static_pages' && action_name == 'dashboard') ? active_css : inactive_css
  = link_to 'Websites', websites_path, class: (controller_name == 'websites' || controller_name == 'pages' || controller_name == 'menus') ? active_css : inactive_css
  = link_to 'Settings', settings_path, class: (controller_name == 'static_pages' && action_name == 'settings') ? active_css : inactive_css
