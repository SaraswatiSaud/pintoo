.row
  .col-md-3
    = render 'shared/admin_menu'
  .col-md-7
    %h1 Editing page
    = form_for([@website, @page]) do |f|
      %table
        %tr
          %td= f.label :name
          %td= f.text_field :name, required: true

        %tr
          %td= f.submit

    = link_to 'Back', website_pages_path(@website), class: 'btn btn-primary'
