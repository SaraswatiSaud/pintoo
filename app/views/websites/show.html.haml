.row
  .col-md-3
    = render 'shared/admin_menu'
  .col-md-7
    %h1= @website.name
    %p
      Subdomain:
      = @website.subdomain
    %p
      Created at:
      = @website.created_at
    %p
      = link_to 'View Website', sites_path, class: 'btn btn-danger', style: 'margin-left: 50px;'
    %p
      = link_to 'Edit', edit_website_path, class: 'btn btn-primary'
      = link_to 'Back', websites_path, class: 'btn btn-primary'
  .col-md-2
    = render 'shared/website_setting'
